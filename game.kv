WindowManager:
    Categories:
    Play:

<Button>:
    font_size: 40
    color: 1,1,1,1
    size_hint: .5, .1

<Categories>:
    name: "categories"
    view: view

    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            id: view

<Play>:
    name: "play"
    hw: game_word
    attempts: attempts
    hangman: hangman

    Image:
        source: 'play_0.png'
        pos_hint: {'center_x': .5, 'center_y': .75}
        size_hint: 1, .5
        allow_stretch: True
        id: hangman

    Label:
        id: attempts
        font_size: 40
        size_hint: 1, .2
        pos_hint: {"x":0, "top":.15}
        text: "Attempts: 6"

    Label:
        id: game_word
        font_size: 40
        size_hint: 1, .1
        pos_hint: {"x":0, "top":.5}
        text: ""

    Button:
        size_hint: .1, .1
        font_size: 20
        pos_hint: {"x":0, "top":.4}
        text: "q"
        on_press:
